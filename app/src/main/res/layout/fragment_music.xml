<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/whole_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ba2b28"
    tools:context="test.dahun.mobileplay.main.MainActivity">

    <ImageView
        android:id="@+id/like_gif"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        />

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:text="Big Love"
            android:textColor="#f2efe0"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_regular"
            android:includeFontPadding="false"
            android:text="검정치마"
            android:textColor="#f2efe0"
            android:textSize="16dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/bg_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_layout"
        android:layout_above="@+id/musicProgress"
        android:scaleType="fitXY"
        />

    <LinearLayout
        android:id="@+id/album_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/play_layout"
        android:layout_below="@+id/top_layout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="-5dp"
        android:gravity="center">

        <test.dahun.mobileplay.ui.VerticalViewPager
            android:id="@+id/musicPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="36dp"></test.dahun.mobileplay.ui.VerticalViewPager>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/play_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/control_layout"
        android:paddingBottom="20dp"
        android:gravity="center"
        >
        <ImageButton
            android:id="@+id/btn_prevplay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            />
        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:background="@null"
            />
        <ImageButton
            android:id="@+id/btn_nextplay"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/control_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/musicProgress"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageButton
                android:id="@+id/btn_lyric"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/heart_touch_area"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageButton
                android:id="@+id/heart"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/like_off"
                />

            <TextView
                android:id="@+id/heart_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:text="0"
                android:textColor="#f2efe0"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            >
            <ImageButton
                android:id="@+id/btn_repeat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_repeatall"
                />
        </LinearLayout>
    </LinearLayout>


    <SeekBar
        android:id="@+id/musicProgress"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/time_rate"
        android:layout_centerInParent="true"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />

    <LinearLayout
        android:id="@+id/time_rate"
        android:paddingBottom="10dp"
        android:layout_width="332dp"
        android:layout_height="42dp"
        android:layout_above="@+id/bottom_layout"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/currentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="14dp"
                android:textColor="#f2efe0"
                android:fontFamily="@font/notosanskr_regular"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            >
            <TextView
                android:id="@+id/maxTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="14dp"
                android:textColor="#80f2efe0"
                android:fontFamily="@font/notosanskr_regular"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        >
        <ImageButton
            android:id="@+id/home_btn"
            android:layout_marginLeft="23dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/mn_home_off"
            />
        <ImageButton
            android:id="@+id/list_btn"
            android:layout_marginLeft="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/mn_list_off"
            />
        <ImageButton
            android:id="@+id/play_btn"
            android:layout_marginLeft="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:scaleType="fitXY"
            />
        <ImageButton
            android:id="@+id/gallery_btn"
            android:layout_marginLeft="35dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/mn_gallery_off"
            />
        <ImageButton
            android:id="@+id/sns_btn"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="23dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/mn_sns_off"
            />

    </LinearLayout>
</RelativeLayout>
