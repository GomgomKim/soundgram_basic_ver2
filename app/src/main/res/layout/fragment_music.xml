<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/whole_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faf5dc"
    tools:context="test.dahun.mobileplay.main.MainActivity">

    <ImageView
        android:id="@+id/like_gif"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:adjustViewBounds="true"
        />

    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/daehan_regular"
            android:includeFontPadding="false"
            android:paddingBottom="6dp"
            android:text="오빠야"
            android:textColor="#333333"
            android:textSize="28dp" />

        <TextView
            android:id="@+id/singer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_light"
            android:includeFontPadding="false"
            android:text="신현희와김루트"
            android:textColor="#454545"
            android:textSize="17dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/album_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/play_layout"
        android:layout_below="@+id/top_layout"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="-5dp"
        android:gravity="center"
        >
        <ImageView
            android:id="@+id/pager_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            />

        <test.dahun.mobileplay.ui.VerticalViewPager
            android:id="@+id/musicPager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">
        </test.dahun.mobileplay.ui.VerticalViewPager>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/play_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_above="@+id/control_layout"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >
        <ImageButton
            android:id="@+id/btn_prevplay"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@null"
            />
        <ImageButton
            android:id="@+id/btn_play"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="55dp"
            android:layout_marginRight="55dp"
            android:background="@null"
            />
        <ImageButton
            android:id="@+id/btn_nextplay"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@null"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/control_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/musicProgress"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageButton
                android:id="@+id/btn_lyric"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@null"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/heart_touch_area"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/heart"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/like_off"
                />

            <TextView
                android:id="@+id/heart_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosanskr_regular"
                android:text="0"
                android:textColor="#333333"
                android:textSize="14dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            >
            <ImageButton
                android:id="@+id/btn_repeat"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_repeatall"
                />
        </LinearLayout>
    </LinearLayout>


    <SeekBar
        android:id="@+id/musicProgress"
        android:layout_width="357dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/time_rate"
        android:layout_centerInParent="true"
        android:paddingTop="5dp"
        />

    <LinearLayout
        android:id="@+id/time_rate"
        android:layout_alignParentBottom="true"
        android:paddingBottom="10dp"
        android:layout_width="332dp"
        android:layout_height="42dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <TextView
                android:id="@+id/currentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="14dp"
                android:textColor="#333333"
                android:fontFamily="@font/notosanskr_regular"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            >
            <TextView
                android:id="@+id/maxTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="14dp"
                android:textColor="#80333333"
                android:fontFamily="@font/notosanskr_regular"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
