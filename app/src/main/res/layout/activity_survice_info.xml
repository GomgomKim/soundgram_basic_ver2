<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="test.dahun.mobileplay.tab.SurviceInfoActivity">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ffffff"
        >
        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_close"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_below="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e9e9e9"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            >

            <ImageView
                android:id="@+id/logo_img"
                android:layout_width="106dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="32dp"
                android:scaleType="fitXY"
                />
            <RelativeLayout
                android:id="@+id/sns_btn"
                android:layout_below="@+id/logo_img"
                android:layout_centerHorizontal="true"
                android:layout_width="195dp"
                android:layout_height="45dp"
                android:layout_marginBottom="32dp"
                >
                <ImageView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/insta_btn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="fitXY"
                    />
                <ImageView
                    android:layout_centerHorizontal="true"
                    android:id="@+id/facebook_btn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="fitXY"
                    />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:id="@+id/twt_btn"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="fitXY"
                    />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/util_btn"
                android:layout_below="@+id/sns_btn"
                android:layout_width="match_parent"
                android:layout_height="224dp"
                android:paddingRight="40dp"
                android:paddingLeft="40dp"
                android:layout_marginBottom="24dp"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:id="@+id/evaluation_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/pink_border"
                    >
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="음반평가"
                        android:textColor="#ce4ec4"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanskr_regular"
                        android:textSize="16dp"
                        android:drawableRight="@drawable/ic_write_resize"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/support_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/pink_border"
                    >
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="고객지원"
                        android:textColor="#ce4ec4"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanskr_regular"
                        android:textSize="16dp"
                        android:drawableRight="@drawable/ic_costomer_resize"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/intro_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="8dp"
                    android:background="#ce4ec4"
                    >
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="회사소개"
                        android:textColor="#ffffff"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanskr_regular"
                        android:textSize="16dp"
                        android:drawableRight="@drawable/ic_homepage_resize"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/terms_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/gray_border"
                    >
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="서비스 약관"
                        android:textColor="#737373"
                        android:includeFontPadding="false"
                        android:fontFamily="@font/notosanskr_light"
                        android:textSize="16dp"
                        />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/util_btn"
                android:layout_centerHorizontal="true"
                android:text="version 1.3"
                android:fontFamily="@font/notosanskr_light"
                android:textColor="#737373"
                android:textSize="16dp"
                android:includeFontPadding="false"
                />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
